<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    tools:context="com.warivirtualpos.wari.WithdrawalRequestDetailActivity"
    tools:showIn="@layout/activity_withdrawal_request_detail">

        <!--layout to create space on the left-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp">

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:weightSum="6">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:id="@+id/bénéficiaire_text"
                android:text="Bénéficiaire"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/beneficiary_lastname_text"
                android:text="Egesa"
                android:textColor="@color/purple_400"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/beneficiary_firstname_text"
                android:text="Hilary"
                android:textColor="@color/purple_400"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/beneficiary_phone_text"
                android:text="778908987"
                android:textColor="@color/purple_400"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/confirmation_et"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/validate_btn"
                    android:text="Validate"
                    android:textColor="@color/yellow_500"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/cancel_btn"
                    android:text="CANCEL"
                    android:textColor="@color/yellow_500"/>

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

