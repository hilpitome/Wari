<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="9">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/sender_lastname_text"
                    android:text="Toure"
                    android:textColor="@color/blue_400"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/sender_firstname_text"
                    android:text="Hisham"
                    android:textColor="@color/blue_400"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/sender_phone_text"
                    android:text="0787XXXXXX"
                    android:textColor="@color/blue_400"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/amount_text"
                    android:text="543"
                    android:textColor="@color/blue_400"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/beneficiary_lastname_text"
                    android:text="Egesa"
                    android:textColor="@color/blue_400"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/beneficiary_firstname_text"
                    android:text="Hilary"
                    android:textColor="@color/blue_400"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/beneficiary_phone_text"
                    android:text="778908987"
                    android:textColor="@color/blue_400"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"
                    android:id="@+id/confirmation_text"
                    android:text="711-524-098-876"
                    android:textColor="@color/blue_400"
                    android:background="@color/blue_400"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/status_text"
                    android:text="OK"
                    android:textColor="@color/blue_400"/>



        </LinearLayout>
        <include layout="@layout/item_divider"/>
    </LinearLayout>




</android.support.v7.widget.CardView>
